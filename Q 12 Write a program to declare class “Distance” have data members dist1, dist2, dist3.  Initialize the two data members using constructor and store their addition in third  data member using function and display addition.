using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

class Distance
{
    double dist1, dist2,dist3;
    public Distance(double x, double y)
    {
        dist1 = x; dist2 = y;
        
    }
    public double display()
    {
        dist3 = dist1 + dist2;
        return dist3;
    }
}

namespace college2
{
    internal class ass_1_12
    {
        static void Main(string[] args)
        {
            Distance ds = new Distance(444.44,454.25);
            
            Console.WriteLine("Distance = "+ ds.display());

        }
    }
}
